# ============================================================================
# Healthcare MCP Platform — Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values for your environment.
# Only variables you actively use need to be set — the rest can stay blank.
#
# For local MCP server development, most defaults work out of the box.
# For agent workflows or Azure deployment, fill in the Azure OpenAI section.
# ============================================================================

# ── MCP Servers (Local Development) ─────────────────────────────────────────
# These are set automatically in local.settings.json per server.
# Only needed if running Docker Compose or overriding defaults.

# FHIR server endpoint (fhir-operations server)
FHIR_SERVER_URL=

# PubMed NCBI API key (optional — increases rate limits for pubmed server)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# Cosmos DB (cosmos-rag server)
COSMOS_DB_ENDPOINT=
COSMOS_DB_DATABASE=healthcare-mcp

# Azure AI Services — embeddings (cosmos-rag server)
AZURE_AI_SERVICES_ENDPOINT=
EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# ── Agent Workflows (src/agents/) ───────────────────────────────────────────
# Required for running agent orchestration workflows and DevUI.

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Agent behavior
AGENT_TEMPERATURE=0.3

# ── APIM (Cloud Deployment) ─────────────────────────────────────────────────
# Set these when running agents against deployed APIM endpoints (not local).

APIM_BASE_URL=https://<your-apim>.azure-api.net/mcp-pt
APIM_SUBSCRIPTION_KEY=

# ── MCP Entra Auth (Advanced — OBO Flow) ────────────────────────────────────
# Only needed for OAuth-secured MCP endpoints via APIM.

MCP_ENTRA_TENANT_ID=
MCP_ENTRA_CLIENT_ID=
AZURE_CLIENT_ID=

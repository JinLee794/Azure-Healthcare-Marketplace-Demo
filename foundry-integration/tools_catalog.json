{
  "$schema": "https://schema.management.azure.com/schemas/foundry/tools-catalog/2024-01-01/tool.json",
  "tools": [
    {
      "id": "healthcare.azure-fhir",
      "name": "Azure FHIR Healthcare Tools",
      "description": "Tools for interacting with Azure API for FHIR - search patients, retrieve observations, and validate resources",
      "version": "1.0.0",
      "publisher": "Healthcare IT",
      "category": "Healthcare",
      "type": "mcp",
      "server": {
        "url": "${FHIR_MCP_URL}",
        "transport": "streamable-http",
        "authentication": {
          "type": "azure_ad",
          "audience": "api://healthcare-mcp-server"
        }
      },
      "capabilities": [
        {
          "name": "search_patients",
          "description": "Search for patients by name, identifier, birthdate, or demographics",
          "inputSchema": {
            "type": "object",
            "properties": {
              "family": { "type": "string", "description": "Patient family (last) name" },
              "given": { "type": "string", "description": "Patient given (first) name" },
              "identifier": { "type": "string", "description": "Patient identifier (MRN)" },
              "birthdate": { "type": "string", "format": "date" },
              "gender": { "type": "string", "enum": ["male", "female", "other", "unknown"] },
              "count": { "type": "integer", "description": "Max result count", "default": 10 }
            }
          }
        },
        {
          "name": "get_patient",
          "description": "Retrieve a specific patient by FHIR resource ID",
          "inputSchema": {
            "type": "object",
            "properties": {
              "patient_id": { "type": "string", "description": "FHIR Patient resource ID" }
            },
            "required": ["patient_id"]
          }
        },
        {
          "name": "get_patient_observations",
          "description": "Retrieve clinical observations for a patient",
          "inputSchema": {
            "type": "object",
            "properties": {
              "patient_id": { "type": "string" },
              "category": { "type": "string", "enum": ["vital-signs", "laboratory", "social-history", "imaging"] },
              "code": { "type": "string", "description": "LOINC code" },
              "count": { "type": "integer", "description": "Max result count", "default": 20 }
            },
            "required": ["patient_id"]
          }
        },
        {
          "name": "validate_resource",
          "description": "Validate a FHIR resource against profiles",
          "inputSchema": {
            "type": "object",
            "properties": {
              "resource_type": { "type": "string" },
              "resource": { "type": "object", "description": "FHIR resource JSON object" }
            },
            "required": ["resource_type", "resource"]
          }
        }
      ],
      "compliance": {
        "hipaa": true,
        "dataResidency": ["US"],
        "auditLogging": true
      },
      "tags": ["healthcare", "fhir", "azure", "clinical-data"]
    },
    {
      "id": "healthcare.coverage-policy",
      "name": "Coverage Policy Tools",
      "description": "Tools for Medicare coverage policy lookup and medical necessity checks",
      "version": "1.0.0",
      "publisher": "Healthcare IT",
      "category": "Healthcare",
      "type": "mcp",
      "server": {
        "url": "${COVERAGE_MCP_URL}",
        "transport": "streamable-http",
        "authentication": {
          "type": "azure_ad",
          "audience": "api://coverage-mcp-server"
        }
      },
      "capabilities": [
        {
          "name": "search_coverage",
          "description": "Search Medicare coverage determinations (LCD/NCD)",
          "inputSchema": {
            "type": "object",
            "properties": {
              "query": { "type": "string", "description": "Search term" },
              "coverage_type": { "type": "string", "enum": ["all", "lcd", "ncd"], "default": "all" },
              "limit": { "type": "integer", "minimum": 1, "maximum": 20, "default": 10 }
            },
            "required": ["query"]
          }
        },
        {
          "name": "get_coverage_by_cpt",
          "description": "Get Medicare coverage details for a CPT/HCPCS code",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cpt_code": { "type": "string", "description": "CPT or HCPCS procedure code" }
            },
            "required": ["cpt_code"]
          }
        },
        {
          "name": "get_coverage_by_icd10",
          "description": "Get Medicare coverage details related to an ICD-10 code",
          "inputSchema": {
            "type": "object",
            "properties": {
              "icd10_code": { "type": "string", "description": "ICD-10 diagnosis code" }
            },
            "required": ["icd10_code"]
          }
        },
        {
          "name": "check_medical_necessity",
          "description": "Check likely medical necessity for CPT + ICD-10 combinations",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cpt_code": { "type": "string", "description": "CPT or HCPCS procedure code" },
              "icd10_codes": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Supporting diagnosis codes"
              }
            },
            "required": ["cpt_code", "icd10_codes"]
          }
        }
      ],
      "compliance": {
        "hipaa": true,
        "dataResidency": ["US"],
        "auditLogging": true
      },
      "tags": ["healthcare", "coverage", "prior-auth", "insurance"]
    }
  ]
}

{
  "$schema": "https://schema.management.azure.com/schemas/foundry/tools-catalog/2024-01-01/tool.json",
  "tools": [
    {
      "id": "healthcare.azure-fhir",
      "name": "Azure FHIR Healthcare Tools",
      "description": "Tools for interacting with Azure API for FHIR - search patients, retrieve observations, and validate resources",
      "version": "1.0.0",
      "publisher": "Healthcare IT",
      "category": "Healthcare",
      "type": "mcp",
      "server": {
        "url": "${FHIR_MCP_URL}",
        "transport": "streamable-http",
        "authentication": {
          "type": "azure_ad",
          "audience": "api://healthcare-mcp-server"
        }
      },
      "capabilities": [
        {
          "name": "search_patients",
          "description": "Search for patients by name, identifier, birthdate, or demographics",
          "inputSchema": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "Patient name (partial match)" },
              "identifier": { "type": "string", "description": "Patient identifier (MRN)" },
              "birthdate": { "type": "string", "format": "date" },
              "gender": { "type": "string", "enum": ["male", "female", "other", "unknown"] }
            }
          }
        },
        {
          "name": "get_patient",
          "description": "Retrieve a specific patient by FHIR resource ID",
          "inputSchema": {
            "type": "object",
            "properties": {
              "patientId": { "type": "string", "description": "FHIR Patient resource ID" }
            },
            "required": ["patientId"]
          }
        },
        {
          "name": "search_observations",
          "description": "Search for clinical observations for a patient",
          "inputSchema": {
            "type": "object",
            "properties": {
              "patientId": { "type": "string" },
              "category": { "type": "string", "enum": ["vital-signs", "laboratory", "social-history", "imaging"] },
              "code": { "type": "string", "description": "LOINC code" },
              "dateFrom": { "type": "string", "format": "date" },
              "dateTo": { "type": "string", "format": "date" }
            },
            "required": ["patientId"]
          }
        },
        {
          "name": "get_patient_coverage",
          "description": "Retrieve insurance coverage for a patient",
          "inputSchema": {
            "type": "object",
            "properties": {
              "patientId": { "type": "string" }
            },
            "required": ["patientId"]
          }
        },
        {
          "name": "validate_fhir_resource",
          "description": "Validate a FHIR resource against profiles",
          "inputSchema": {
            "type": "object",
            "properties": {
              "resourceType": { "type": "string" },
              "resource": { "type": "string", "description": "FHIR resource JSON" },
              "profile": { "type": "string", "description": "Profile URL" }
            },
            "required": ["resourceType", "resource"]
          }
        }
      ],
      "compliance": {
        "hipaa": true,
        "dataResidency": ["US"],
        "auditLogging": true
      },
      "tags": ["healthcare", "fhir", "azure", "clinical-data"]
    },
    {
      "id": "healthcare.coverage-policy",
      "name": "Coverage Policy Tools",
      "description": "Tools for checking insurance coverage policies and prior authorization requirements",
      "version": "1.0.0",
      "publisher": "Healthcare IT",
      "category": "Healthcare",
      "type": "mcp",
      "server": {
        "url": "${COVERAGE_MCP_URL}",
        "transport": "streamable-http",
        "authentication": {
          "type": "azure_ad",
          "audience": "api://coverage-mcp-server"
        }
      },
      "capabilities": [
        {
          "name": "check_coverage_policy",
          "description": "Check if a procedure requires prior authorization",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cptCode": { "type": "string", "description": "CPT procedure code" },
              "icd10Code": { "type": "string", "description": "ICD-10 diagnosis code" },
              "payerId": { "type": "string", "description": "Insurance payer ID" }
            },
            "required": ["cptCode"]
          }
        },
        {
          "name": "get_ncd_details",
          "description": "Get National Coverage Determination details",
          "inputSchema": {
            "type": "object",
            "properties": {
              "ncdId": { "type": "string", "description": "NCD identifier" }
            },
            "required": ["ncdId"]
          }
        },
        {
          "name": "get_lcd_details",
          "description": "Get Local Coverage Determination details",
          "inputSchema": {
            "type": "object",
            "properties": {
              "lcdId": { "type": "string", "description": "LCD identifier" },
              "macId": { "type": "string", "description": "Medicare Administrative Contractor ID" }
            },
            "required": ["lcdId"]
          }
        }
      ],
      "compliance": {
        "hipaa": true,
        "dataResidency": ["US"],
        "auditLogging": true
      },
      "tags": ["healthcare", "coverage", "prior-auth", "insurance"]
    }
  ]
}

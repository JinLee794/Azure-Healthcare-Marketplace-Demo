{
  "name": "azure-healthcare-copilot",
  "displayName": "Azure Healthcare Copilot",
  "description": "GitHub Copilot chat participant for Azure healthcare development with FHIR, DICOM, and prior authorization support",
  "version": "0.0.1",
  "publisher": "healthcare-it",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "copilot",
    "healthcare",
    "fhir",
    "azure",
    "mcp"
  ],
  "activationEvents": [
    "onChatParticipant:azure-healthcare"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "azure-healthcare",
        "fullName": "Azure Healthcare",
        "name": "healthcare",
        "description": "Ask about Azure FHIR, DICOM, prior authorization, and healthcare development",
        "isSticky": true,
        "commands": [
          {
            "name": "fhir",
            "description": "Help with FHIR resources and Azure API for FHIR"
          },
          {
            "name": "dicom",
            "description": "Help with DICOM and medical imaging"
          },
          {
            "name": "pa",
            "description": "Help with prior authorization workflows"
          },
          {
            "name": "validate",
            "description": "Validate a FHIR resource"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Azure Healthcare Copilot",
      "properties": {
        "azureHealthcare.fhirServerUrl": {
          "type": "string",
          "default": "",
          "description": "Azure FHIR server URL"
        },
        "azureHealthcare.mcpServerUrl": {
          "type": "string",
          "default": "",
          "description": "Healthcare MCP server URL"
        },
        "azureHealthcare.enableSkills": {
          "type": "boolean",
          "default": true,
          "description": "Enable healthcare skills context injection"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "@azure/identity": "^4.2.0"
  }
}
